<?xml version="1.0" encoding="utf-8"?>

<Patch>

  	<!-- Hediffs_BodyParts_Bionic_Empire.xml -->
	
	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			
  			<!-- Detoxifier Stomach -->
			
			<li Class="PatchOperationReplace">
				<xpath>/Defs/HediffDef[defName = "DetoxifierStomach"]/addedPartProps/partEfficiency</xpath>
				<value>
					<partEfficiency>1.5</partEfficiency>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName = "DetoxifierStomach"]/costList</xpath>
				<value>
					<costList>
						<Plasteel>10</Plasteel>
						<ComponentSpacer>12</ComponentSpacer>
					</costList>
				</value>
			</li>
			
  			<!-- Reprocessor Stomach -->
			
			<li Class="PatchOperationReplace">
				<xpath>/Defs/HediffDef[defName = "ReprocessorStomach"]/addedPartProps/partEfficiency</xpath>
				<value>
					<partEfficiency>1.5</partEfficiency>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName = "ReprocessorStomach"]/costList</xpath>
				<value>
					<costList>
						<Plasteel>10</Plasteel>
						<ComponentSpacer>12</ComponentSpacer>
					</costList>
				</value>
			</li>
			
  			<!-- Nuclear Stomach -->
			
			<li Class="PatchOperationReplace">
				<xpath>/Defs/HediffDef[defName = "NuclearStomach"]/addedPartProps/partEfficiency</xpath>
				<value>
					<partEfficiency>1.5</partEfficiency>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName = "NuclearStomach"]/costList</xpath>
				<value>
					<costList>
						<Plasteel>10</Plasteel>
						<ComponentSpacer>12</ComponentSpacer>
					</costList>
				</value>
			</li>
			
		</operations>
	</Operation>
	
</Patch>